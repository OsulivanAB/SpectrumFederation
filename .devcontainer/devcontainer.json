{
    "name": "WoW Addon Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "remoteUser": "vscode",
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "postStartCommand": "bash .devcontainer/setup-blizzard-ui.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "LuaLS.lua-language-server",
                "ketho.wow-api",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "GitHub.vscode-pull-request-github"
            ]
        }
    }
}